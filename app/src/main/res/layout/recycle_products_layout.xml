<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    android:id="@+id/recycle_products_layout"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="224dp">

        <LinearLayout
            android:id="@+id/product_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">

            <ImageView
                android:id="@+id/product_card_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/grocery"
                android:padding="4dp"
                android:contentDescription="@string/product_image" />

            <TextView
                android:id="@+id/product_card_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_text"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:fontFamily="@font/aldrich"
                android:padding="4dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/product_card_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_text"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/aldrich"
                android:padding="4dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/product_card_unit_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/sample_text"
                android:fontFamily="@font/aldrich"
                android:textAlignment="center"
                android:textColor="#757575"
                android:textSize="12sp" />

        </LinearLayout>

</androidx.cardview.widget.CardView>