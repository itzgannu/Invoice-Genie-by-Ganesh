<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/avatar_picker_pop_up"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/border_sharp_black"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:fontFamily="@font/aldrich"
            android:text="@string/select_an_avatar"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/male_avatar_01"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:src="@drawable/male_01"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:contentDescription="@string/select_avatar" />

            <ImageButton
                android:id="@+id/female_avatar_01"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/female_01"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:contentDescription="@string/select_avatar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/avatar_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/close"
                android:fontFamily="@font/aldrich"
                android:textColor="@color/colorPrimaryDark"/>

            <Button
                android:id="@+id/avatar_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/save"
                android:fontFamily="@font/aldrich"
                android:textColor="@color/black" />

        </LinearLayout>
        
    </LinearLayout>

</ScrollView>